<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fonts">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ContainerLoginComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">270dp</item>
        <item name="android:background">@drawable/container_login_components</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>

    <style name="textComponents" parent="fonts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:elevation">5dp</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:background">@drawable/text_components</item>
        <item name="android:textColor">@color/White_text</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColorHint">@color/Gray_text</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="BTNComponents" parent="fonts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_components</item>
        <item name="android:textColor">@color/White_text</item>
        <item name="android:layout_marginTop">5dp</item>

    </style>

        
    
</resources>